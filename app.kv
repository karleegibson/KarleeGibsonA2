BoxLayout:
    orientation: 'vertical'
    Label:
        id: priceOrCompletedLabel
        size_hint_y: 0.1
        text: ''
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3
            Button:
                id: listRequiredButton
                text: 'List Required'
                on_release: app.display_required_items()
            Button:
                id: listCompletedButton
                text: 'List Completed'
                on_release: app.display_completed_items()
            Label:
                id: addNewItemLabel
                text: 'Add New Item...'
            Label:
                id: nameLabel
                text: 'Name:'
            TextInput:
                id: nameTextInput
                text: ''
            Label:
                id: priceLabel
                text: 'Price:'
            TextInput:
                id: priceTextInput
                text: ''
            Label:
                id: priorityLabel
                text: 'Priority:'
            TextInput:
                id: priorityTextInput
                text: ''
            Button:
                id: addItemButton
                text: 'Add Item'
                on_release: app.add_new_item()
            Button:
                id: clearButton
                text: 'Clear'
                on_release: app.clear_text()
        BoxLayout:
            # this layout is populated with (button) widgets in app code
            id: entriesBox
            cols: 1
            orientation: 'vertical'
    Label:
        id: statusLabel
        size_hint_y: 0.1
        text: ''



